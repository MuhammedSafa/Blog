@model IEnumerable<BlogWithMvc5.Models.Article>

<h2>Guest</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href='@Url.Action("Details", "Visitor", new { id = item.Id })'>@Html.DisplayFor(modelItem => item.Subject)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content).ToString().Substring(0, 100) ...
            </td>
            <td>
                <img src="@Url.Content("~/Content/image/" + @Html.DisplayFor(modelItem => item.Picture))" width="100" height="120" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
        </tr>
    }

</table>
